<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc" tools:context=".Basket">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
   //

    <FrameLayout android:layout_width="317dp" android:layout_height="200dp"
         android:fitsSystemWindows="true"
         android:id="@+id/basket_"
         android:layout_gravity="center_horizontal|bottom"
        android:focusable="false">

         <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
             android:layout_width="match_parent" android:layout_height="wrap_content"
             android:layout_gravity="bottom|center_horizontal"
             android:background="@color/black_overlay" android:orientation="horizontal"
             tools:ignore="UselessParent"
             android:baselineAligned="false">

         </LinearLayout>

    </FrameLayout>

    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="423dp" android:keepScreenOn="true" android:textColor="#ff00ff"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:text="@string/dummy_content"
        android:height="200dp"
        android:layout_gravity="center_horizontal|top" />


</FrameLayout>
